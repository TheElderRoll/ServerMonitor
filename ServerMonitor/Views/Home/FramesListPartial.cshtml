@model List<ServerMonitor.Models.Frame>

<table class="table-info table-frames">
    <tr>
        <th>DateTime</th>
        <th>CPU%</th>
        <th>Disk%</th>
        <th>Memory%</th>
        <th>AvatableRam</th>
        <th>DiskReads</th>
        <th>DiskWrites</th>
    </tr>

    @foreach (ServerMonitor.Models.Frame frame in Model)
    {
        <tr>
            <td>@frame.DateTime</td>
            <td>@frame.CpuUsagePercent</td>
            <td>@frame.DiskUsagePercent</td>
            <td>@frame.MemoryUsagePercent</td>
            <td>@frame.AvatableMemory</td>
            <td>@frame.DiskReads</td>
            <td>@frame.DiskWrites</td>
        </tr>
    }
</table>
<style>
    .table {
        border: 1px solid #eee;
        table-layout: fixed;
        width: 100%;
        margin-bottom: 20px;
    }

        .table th {
            font-weight: bold;
            padding: 5px;
            background: #efefef;
            border: 1px solid #dddddd;
        }

        .table td {
            padding: 5px 10px;
            border: 1px solid #eee;
            text-align: left;
        }

        .table tbody tr:nth-child(odd) {
            background: #fff;
        }

        .table tbody tr:nth-child(even) {
            background: #F7F7F7;
        }
</style>

